<!-- připojení hlavičky -->
<%- include("include/_header.ejs")%>
<!-- /připojení hlavičky -->
<nav
        class="navbar nav-pills navbar-expand-md navbar-dark bg-dark sticky-top"
      >
        <div class="container">
          <a class="navbar-brand" href="/"
            ><img src="/img/home-insurance.png" alt="Pojištění" /> Pojistěte
            se</a
          >
          <button
            class="navbar-toggler"
            type="button"
            data-bs-toggle="collapse"
            data-bs-target="#hamburger"
            aria-controls="hamburger"
            aria-expanded="false"
            aria-label="Zobrazit navigační lištu"
          >
            <span class="navbar-toggler-icon"></span>
          </button>

          <div class="collapse navbar-collapse" id="hamburger">
            <ul class="navbar-nav">
              <li class="nav-item me-3">
                <a class="nav-link p-2" href="/">O aplikaci</a>
              </li>
              <li class="nav-item me-3">
                <a
                  class="nav-link active p-2"
                  aria-current="page"
                  href="/pojistenci"
                  >Pojištěnci</a
                >
              </li>
              <li class="nav-item">
                <a class="nav-link p-2" href="/pojisteni">Pojištění</a>
              </li>
            </ul>
          </div>
        </div>
      </nav>
    </header>
<section class="py-5">
  <div class="container">
    <h2 class="mb-3">Pojištěnci</h2>
    <div class="text-center">
      <a
        class="btn btn-primary px-3 py-2 btn.lg"
        aria-controls="novy-pojistenec"
        href="/pojistenci/novy"
        >Nový pojištěnec</a
      >
    </div>
  </div>
  <div class="container table-responsive my-3">
    <table class="table table-light table-striped table-hover">
      <thead>
        <tr>
          <th>Jméno</th>
          <th>Bydliště</th>
          <th>Akce</th>
        </tr>
      </thead>
      <tbody id="seznam-pojistencu">
        <% for(let i = 0; i < pojistenci.length; i++) { %>
        <tr>
          <td><a class="link-dark" href="/pojistenci/detail/?id=<%=pojistenci[i]._id%>"><%=pojistenci[i].jmeno%> <%=pojistenci[i].prijmeni%></a></td>
          <td><%=pojistenci[i].ulice%>, <%=pojistenci[i].mesto%></td>
          <td>
            <button class="btn btn-danger smazat" data-id="<%=pojistenci[i]._id%>">Odebrat</button>
            <a class="btn btn-warning ml-md-1" href="/pojistenci/editovat/?id=<%=pojistenci[i]._id%>">Editovat</a>
          </td>
        </tr> 
        <% } %>       
      </tbody>
    </table>
  <p id="zadny-pojistenec" class="lead text-center">
    Zatím nebyl přidán žádný pojištěnec.
  </p>
  <div class="alerty text-center"></div>
  </div>  
  
</section>

<!-- připojení patičky -->
<%- include("include/_footer.ejs")%>
<!-- /připojení patičky -->
