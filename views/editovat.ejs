    </header>
<section class="py-5">

<div class="container">
  <h2 class="mb-3">Editovat pojištěnce</h2>
  <div class="text-center">
    <a
      class="btn btn-primary px-3 py-2 btn.lg"
      aria-controls="vsichni-pojistenci"
      href="/pojistenci"
      >Všichni pojištěnci</a
    >
  </div>
  
  <div class="py-3">
    <h2 class=" text-center py-3">Data pojištěnce: <%= pojistenec.jmeno %> <%= pojistenec.prijmeni %></h2>
    <form  action="/api/pojistenci/<%=pojistenec._id%>" method="POST" id="edit-pojistence" novalidate="novalidate">
      <div class="row justify-content-center">
        <div class="form-group col-md-4">
          <label for="jmeno">Jméno</label>
          <input type="hidden" name="id" value="<%= pojistenec._id%>">
          <input
            type="text"
            minlength="2"
            maxlength="25"
            class="form-control"
            placeholder="Jan"
            aria-label="Křestní jméno"            
            name="jmeno"
            required="required"
            value="<%= pojistenec.jmeno %>"         
          />
          <div class="invalid-feedback">Zadejte prosím Vaše jméno.</div>
        </div>
        <div class="form-group col-md-4">
          <label for="prijmeni">Příjmení</label>
          <input
            type="text"
            minlength="2"
            maxlength="25"
            class="form-control"
            placeholder="Novák"
            aria-label="Příjmení"            
            name="prijmeni"
            required="required"
            value="<%= pojistenec.prijmeni %>"
          />
          <div class="invalid-feedback">Zadejte prosím Vaše příjmení.</div>
        </div>
      </div>
      <div class="row justify-content-center">
        <div class="form-group col-md-4">
          <label for="mail">Email</label>
          <input
            type="email"
            minlength="5"
            maxlength="50"
            class="form-control"
            placeholder="jannovak88@seznam.cz"
            aria-label="E-mail"            
            name="email"
            required="required"
            value="<%= pojistenec.email %>"
          />
          <div class="invalid-feedback">Zadejte validní emailovou adresu.</div>
        </div>
        <div class="form-group col-md-4">
          <label for="tel">Telefon</label>
          <input
            type="tel"
            minlength="7"
            maxlength="20"
            class="form-control"
            placeholder="777 888 999"
            aria-label="Telefon"            
            name="telefon"
            required="required"
            value="<%= pojistenec.telefon %>"
          />
          <div class="invalid-feedback">Zadejte prosím validní telefon.</div>
        </div>
      </div>
      <div class="row justify-content-center">
        <div class="form-group col-md-4">
          <label for="ulice">Ulice a č.p.</label>
          <input
            type="text"
            minlength="3"
            maxlength="35"
            class="form-control"
            placeholder="Ve Svahu 3"
            aria-label="Ulice a číslo popisné"            
            name="ulice"
            required="required" 
            value="<%= pojistenec.ulice %>"           
          />
          <div class="invalid-feedback">Zadejte prosím ulici.</div>
        </div>
        <div class="form-group col-md-4">
          <label for="mesto">Město</label>
          <input
            type="text"
            minlength="2"
            maxlength="30"
            class="form-control"
            placeholder="Praha 1"
            aria-label="Město"            
            name="mesto"
            required="required"
            value="<%= pojistenec.mesto %>"
          />
          <div class="invalid-feedback">Zadejte prosím město.</div>
        </div>
      </div>
      <div class="row justify-content-center">
        <div class="col-md-4"></div>
        <div class="form-group col-md-4">
          <label for="psc">PSČ</label>
          <input
            type="text"
            minlength="4"
            maxlength="12"
            class="form-control"
            placeholder="100 00"
            aria-label="Poštovní směrovací číslo"           
            name="psc"
            required="required"
            value="<%= pojistenec.psc %>"
          />
          <div class="invalid-feedback">Zadejte prosím validní PSČ.</div>
        </div>
      </div>
      <div class="text-center mt-3">
        <button          
          class="btn rounded-pill btn-primary px-4"
          type="submit"
          aria-label="Upravit pojištěnce"
        >
          Upravit
        </button>
       <div class="alerty"></div> 
      </div>
    </form>
  </div>
  
</div>
</section>
