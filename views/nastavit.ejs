</header>
<section class="py-5">
    <div class="container">  
    <div class="text-center"> 
    <h2><%= osobniPojisteni.druh.nazev%></h2>
    <a
        class="btn btn-primary px-3 py-2 btn.lg"
        aria-controls="jit-zpet"
        href="/pojistenci/detail/?id=<%= osobniPojisteni.pojisteny_id._id%>"
        >Zpět do detailu pojištěnce</a
      >
    </div> 
  
  <div class="py-3">    
    <form id="nastaveni-pojisteni" novalidate="novalidate">
        <div class="row justify-content-center">
            <div class="form-group mb-3 col-md-4">
            <label for="nazev" class="col-form-label">Pojištění</label>
            <input type="hidden" name="id" value="<%= osobniPojisteni._id%>">
            <input type="text" class="form-control" name="druh" 
            minlength="3" maxlength="50"  
            value="<%= osobniPojisteni.druh.nazev%>"
            required="required"
            disabled
            tabindex="-1">
          </div> 
            <div class="form-group mb-3 col-md-4">
            <label for="pojisteny_id.jmeno" class="col-form-label">Pojištěnec</label>
            <input type="hidden" name="pojisteny_id" value="<%= osobniPojisteni.pojisteny_id._id%>">
            <input type="text" class="form-control" name="pojisteny_id.jmeno"            
            minlength="3" maxlength="50"  
            value="<%= osobniPojisteni.pojisteny_id.jmeno%> <%= osobniPojisteni.pojisteny_id.prijmeni%>"
            required="required"
            disabled
            tabindex="-1">
          </div> 
        </div>   

       <div class="row justify-content-center">
        <div class="form-group col-md-4">
          <label for="castka">Částka</label>           
          <input
            type="number"
            minlength="4"
            maxlength="15"
            min="1000"
            class="form-control"
            placeholder="10000000"
            value="<%= osobniPojisteni.castka%>"
            aria-label="Částka"            
            name="castka"
            required="required"
          />
          <div class="invalid-feedback">Zadejte prosím částku (Minimální hodnota: 1000).</div>
        </div>
        <div class="form-group col-md-4">
          <label for="predmet">Předmět pojištění</label>
          <input
            type="text"
            minlength="2"
            maxlength="25"
            class="form-control"
            value="<%= osobniPojisteni.predmet%>"
            placeholder="Byt"
            aria-label="Předmět"            
            name="predmet"
            required="required"
          />
          <div class="invalid-feedback">Zadejte prosím předmět pojištění.</div>
        </div>
      </div>
      <div class="row justify-content-center my-3">
        <div class="form-group col-md-4">
          <label for="od">Platnost od</label>
          <input
            type="text"
            pattern="(0[1-9]|1[0-9]|2[0-9]|3[01]).(0[1-9]|1[012]).[0-9]{4}"
            minlength="8"
            maxlength="10"
            class="form-control"
            value="<%= osobniPojisteni.od%>"
            placeholder="01.01.2022"
            aria-label="Platnost od"
            id="od"
            name="od"
            required="required"
          />
          <div class="invalid-feedback">Zadejte prosím, od kdy pojištění platí. (Formát DD.MM.YYYY (01.01.2023)</div>
        </div>
        <div class="form-group col-md-4">
          <label for="do">Platnost do</label>
          <input
            type="text"
            pattern="(0[1-9]|1[0-9]|2[0-9]|3[01]).(0[1-9]|1[012]).[0-9]{4}"
            minlength="8"
            maxlength="10"
            class="form-control"
            value="<%= osobniPojisteni.do%>"
            placeholder="31.12.2022"
            aria-label="Platnost do"
            id="do"
            name="do"
            required="required"
          />
          <div class="invalid-feedback">Zadejte prosím, do kdy pojištění platí. (Formát DD.MM.YYYY (01.01.2023)</div>
        </div>
      </div>
      <div class="text-center mt-3">
        <button          
          class="btn rounded-pill btn-primary px-4"
          type="submit"
          aria-label="Nastavit pojištění"
        >
          Upravit
        </button>
        <div class="alerty"></div>
      </div>
    </form>
  </div>
</div>
    
</section>
