        class="navbar nav-pills navbar-expand-md navbar-dark bg-dark sticky-top"
      >
        <div class="container">
          <a class="navbar-brand" href="/"
            ><img src="/img/home-insurance.png" alt="Pojištění" /> Pojistěte
            se</a
          >
          <button
            class="navbar-toggler"
            type="button"
            data-bs-toggle="collapse"
            data-bs-target="#hamburger"
            aria-controls="hamburger"
            aria-expanded="false"
            aria-label="Zobrazit navigační lištu"
          >
            <span class="navbar-toggler-icon"></span>
          </button>

          <div class="collapse navbar-collapse" id="hamburger">
            <ul class="navbar-nav">
              <li class="nav-item me-3">
                <a class="nav-link p-2" href="/">O aplikaci</a>
              </li>
              <li class="nav-item me-3">
                <a
                  class="nav-link p-2"
                  
                  href="/pojistenci"
                  >Pojištěnci</a
                >
              </li>
              <li class="nav-item">
                <a class="nav-link active p-2" aria-current="page" href="/pojisteni">Pojištění</a>
              </li>
            </ul>
          </div>
        </div>
      </nav>
</header>
<section class="py-5">
    <div class="container">    
    <h2 class="mb-3">Editovat pojištění</h2>
  <div class="text-center">
    <a
      class="btn btn-primary px-3 py-2 btn.lg"
      aria-controls="vsechna-pojisteni"
      href="/pojisteni"
      >Všechna pojištění</a
    >
  </div>
  
  <div class="py-3">
    <h2 class=" text-center py-3"><%= pojisteni.nazev %> </h2>
    <form  action="/api/pojisteni/<%=pojisteni._id%>" method="POST" id="uprava-pojisteni" novalidate="novalidate">
      <div class="alerty text-center"></div>
       <div class="form-group mb-3 col-md-6">
            <label for="nazev" class="col-form-label">Název pojištění</label>
            <input type="hidden" name="id" value="<%= pojisteni._id%>">
            <input type="text" class="form-control" name="nazev" 
            minlength="3" maxlength="50" 
            value="<%= pojisteni.nazev %>"
            placeholder="Pojištění nemovitosti" required="required">
            <div class="invalid-feedback">Zadejte prosím název pojištění.</div>
            </div>
        
                    
        <div class="form-group mb-3">
            <label class="col-form-label" for="popis">Popis pojištění</label>
            <textarea class="form-control" name="popis"  cols="maxlength" rows="10" minlength="5" required="required"             
            placeholder="Předmětem tohoto pojištění je..."><%= pojisteni.popis %></textarea>
            <div class="invalid-feedback">Zadejte prosím stručný popis pojištění.</div>
            </div>            
        </div>
      <div class="text-center mt-3">
        <button          
          class="btn rounded-pill btn-primary px-4"
          type="submit"
          aria-label="Upravit pojištění"
        >
          Upravit
        </button>        
      </div></div> 
    </form>
  </div>
</div>
    
</section>
